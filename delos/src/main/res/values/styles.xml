<resources>

    <!-- Base application theme. -->
    <style name="AppCompatTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/gray_background</item>
        <item name="colorPrimaryDark">@color/gray_background</item>
        <item name="colorAccent">@color/blue_btn_bg</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="loading_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/shape_progress_dialog</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <!-- &lt;!&ndash;字体风格 15 w m #535353&ndash;&gt;
     <style name="text_style">
         <item name="android:layout_width">wrap_content</item>
         <item name="android:layout_height">match_parent</item>
         <item name="android:textColor">@color/gray_et_text</item>
         <item name="android:textSize">15sp</item>
         <item name="android:gravity">center_vertical</item>
     </style>
 -->
    <style name="alert_dialog" parent="android:Theme.Holo.Light.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@color/float_transparent</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.4</item>
    </style>

    <style name="style_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/blue_text</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="style_item_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/blue_text</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="style_item_image">
        <item name="android:layout_width">15dp</item>
        <item name="android:layout_height">15dp</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="style_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/light_gray_line</item>
    </style>

    <style name="link_plan_title_text">
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="common_separate_line">
        <item name="android:background">#e7e7e7</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:layout_height">0.8dp</item>
    </style>

    <style name="HoloAlertDialog" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="android:spinnerItemStyle">@style/HoloSpinnerItem</item>
    </style>

    <style name="HoloSpinnerItem" parent="android:Widget.TextView.SpinnerItem">
        <item name="android:textAppearance">@style/HoloTextAppearanceSpinnerItem</item>
    </style>

    <style name="HoloTextAppearanceSpinnerItem" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
        <item name="android:textColor">#000000</item>
    </style>

    <!-- remote controller -->
    <style name="remotecontroller_fun_icon">
        <item name="android:layout_width">@dimen/function_contraller_img_size</item>
        <item name="android:layout_height">@dimen/function_contraller_img_size</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="remotecontroller_fun_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/ac_contraller_textsize</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textColor">#535353</item>
    </style>

    <!-- PopupWindow从下往上的窗口动画 -->
    <style name="MenuAnimationFadeDown">
        <item name="android:windowEnterAnimation">@anim/menu_fadein_down</item>
        <item name="android:windowExitAnimation">@anim/menu_fadeout_down</item>
    </style>

    <style name="PopupAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>

    <style name="RadioButtonBottomTab">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:button">@null</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:textColor">@drawable/txtcolor_gray2oran_sel</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/white</item>
    </style>


    <style name="normalOkButton">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/gray_et_text</item>
        <item name="android:layout_marginLeft">25dp</item>
        <item name="android:layout_marginRight">25dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">49dp</item>
        <item name="android:background">@drawable/shape_btn_blue_stroke</item>

        <!--   <item name="android:background">@drawable/shape_login_btn_bg_gray</item>-->
    </style>

    <style name="normalOkButtonFull">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginLeft">25dp</item>
        <item name="android:layout_marginRight">25dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">49dp</item>
        <item name="android:background">@drawable/btn_blue_save</item>

        <!--   <item name="android:background">@drawable/shape_login_btn_bg_gray</item>-->
    </style>


    <!--字体风格 15 w m #535353-->
    <style name="text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/gray_et_text</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <!--字体风格 14 w w #ffffff-->
    <style name="text_weather_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>
    <!--字体风格 15 w w #535353-->
    <style name="text_style_2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/gray_et_text</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="progress_white_blue_horizontal">
        <item name="android:thumb">@mipmap/music_shine</item>
        <item name="android:progressDrawable">@drawable/bg_seekbar_blue_1p</item>
        <item name="android:thumbOffset">0dp</item>
    </style>

    <style name="MyEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/gray_et_text</item>
        <item name="colorControlActivated">@color/blue_btn_bg</item>
        <item name="android:textCursorDrawable">@color/blue_btn_bg</item>
    </style>

    <style name="style_camera_mode">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/color_camera_definition_text</item>
        <item name="android:background">@drawable/shape_camera_mode</item>
    </style>


    <style name="style_settings_gateway_divider">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MyEditText11" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">#e2e2e2</item>
        <item name="colorControlActivated">#e2e2e2</item>
    </style>
</resources>
