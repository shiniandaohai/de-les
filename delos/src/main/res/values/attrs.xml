<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="CircleImageView">
        <attr name="border_width" format="dimension"/>
        <attr name="border_color" format="color"/>
    </declare-styleable>
    <!--电池-->
    <declare-styleable name="BatteryView">
        <!--画圆角 -->
        <attr name="bvRadius" format="float"/>
        <attr name="bvWidth" format="dimension"/>
        <attr name="bvHeight" format="dimension"/>
        <attr name="bvStrokeWidth" format="dimension"/>
        <attr name="bvStrokeColor" format="color"/>
        <attr name="bvColor" format="color"/>
        <attr name="bvInsideMargin" format="dimension"/>
    </declare-styleable>
    <!--灯开关-->
    <declare-styleable name="LightControlView">
       <!-- <attr name="background_color" format="color"/>
        <attr name="circle_outside_color" format="color"/>
        <attr name="circle_inside_color" format="color"/>
        <attr name="circle_outside_width" format="dimension"/>
        <attr name="circle_distance_width" format="dimension"/>&lt;!&ndash;间隔&ndash;&gt;
        <attr name="text_on_color" format="color"/>
        <attr name="text_off_color" format="color"/>

        <attr name="stroke_color" format="color"/>
        <attr name="stroke_width" format="dimension"/>

        <attr name="circle_padding" format="dimension"/>
        <attr name="circle_padding_top" format="dimension"/>-->

        <attr name="text_size" format="dimension"/><!--显示单位的文字的大小-->
        <attr name="light_num" format="integer"/>
        <attr name="isSensor" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="RingSeekBar">
        <attr name="thumb" format="reference" />
        <attr name="progress_width" format="dimension" />
        <attr name="progress_background" format="color" />
        <attr name="progress_front" format="color" />
        <attr name="progress_max" format="integer" />
        <attr name="show_progress_text" format="boolean" />
        <attr name="progress_text_stroke_width" format="dimension" />
        <attr name="progress_text_color" format="color" />
        <attr name="progress_text_size" format="dimension" />
    </declare-styleable>


    <declare-styleable name="AirCleanView">
        <attr name="text" format="string" />
    </declare-styleable>


    <declare-styleable name="circleProgressBarView">
        <attr name="hintText" format="string"/>
        <attr name="hintTextSize" format="dimension"/>
        <attr name="progressSrc" format="reference"/>

    </declare-styleable>

    <declare-styleable name="seekColorBar">
        <attr name="firstColor" format="color"/>
        <attr name="secondColor" format="color"/>
        <attr name="thirdColor" format="color"/>

        <attr name="firstSize" format="string"/>
        <attr name="secondSize" format="string"/>
        <attr name="thirdSize" format="string"/>

        <attr name="firstText" format="string"/>
        <attr name="secondText" format="string"/>
        <attr name="thirdText" format="string"/>


        <attr name="seekThumb" format="reference" />
        <attr name="seekProgress" format="string"/>

    </declare-styleable>

    <declare-styleable name = "WeatherIndex">
        <attr name = "imageId" format="reference"></attr>
        <attr name = "weathertext" format="string"></attr>
    </declare-styleable>


    <declare-styleable name="DrawableTextView">
        <attr name="drawable_src" format="reference"/>
        <attr name="drawable_height" format="dimension"/>
        <attr name="drawable_width" format="dimension"/>
        <attr name="drawable_location">
            <enum name="left" value="1"/>
            <enum name="top" value="2"/>
            <enum name="right" value="3"/>
            <enum name="bottom" value="4"/>
        </attr>
    </declare-styleable>

</resources>
