<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/ScrollView_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:overScrollMode="never"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:scrollbars="none">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/button_snapshot"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/btn_snapshot_switch"
                android:text="" />

            <TextView
                android:id="@+id/tv_snapshot"
                style="@style/text_style_2"
                android:layout_marginTop="5dp"
                android:text="@string/txt_snapshot" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/button_recording"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/btn_recording_switch_start"
                android:text="" />

            <TextView
                android:id="@+id/tv_record"
                style="@style/text_style_2"
                android:layout_marginTop="5dp"
                android:text="@string/txt_record" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/button_speaker"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@drawable/btn_speaker_off_switch"
                android:text="" />

            <TextView
                android:id="@+id/tv_speaker"
                style="@style/text_style_2"
                android:layout_marginTop="5dp"
                android:text="@string/txt_spear" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
