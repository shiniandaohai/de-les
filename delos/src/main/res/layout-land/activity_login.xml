<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llLogin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_login_bg"
    android:orientation="vertical">

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:background="@color/white_opacity"
        android:orientation="vertical"
        app:layout_marginRightPercent="9.4%"
        app:layout_widthPercent="32%">


        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@mipmap/login_logo"
            app:layout_heightPercent="30%"
            app:layout_marginLeftPercent="30%"
            app:layout_marginRightPercent="30%"
            app:layout_marginTopPercent="10%"
            app:layout_widthPercent="40%" />


        <com.zhy.android.percent.support.PercentRelativeLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/shape_login_username_bg"
            android:gravity="center_vertical"
            app:layout_heightPercent="8.8%"
            app:layout_marginLeftPercent="9.4%"
            app:layout_marginRightPercent="9.4%"
            app:layout_marginTopPercent="4.5%"
            app:layout_paddingPercent="2%"
            app:layout_widthPercent="81.2%">

            <ImageView
                android:id="@+id/ivUsername"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_alignParentLeft="true"
                android:src="@drawable/ic_login_username"
                app:layout_heightPercent="50%"
                app:layout_marginTopPercent="10%"
                app:layout_widthPercent="50%h" />

            <EditText
                android:id="@+id/etLoginUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/ivUsername"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="@string/login_username_hint"
                android:inputType="text"
                android:maxLength="11"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:windowSoftInputMode="adjustPan"
                app:layout_paddingPercent="2%"
                app:layout_textSizePercent="36%h" />

            <ImageView
                android:id="@+id/ivUserdel"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_delete_lg"
                android:visibility="gone"
                app:layout_heightPercent="50%"
                app:layout_marginTopPercent="10%"
                app:layout_widthPercent="50%h" />
        </com.zhy.android.percent.support.PercentRelativeLayout>

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/shape_login_password_bg"
            android:gravity="center_vertical"
            app:layout_heightPercent="8.8%"
            app:layout_marginBottomPercent="8.2%"
            app:layout_marginLeftPercent="9.4%"
            app:layout_marginRightPercent="9.4%"
            app:layout_paddingPercent="2%"
            app:layout_widthPercent="81.2%">

            <ImageView
                android:id="@+id/ivPassword"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_alignParentLeft="true"
                android:src="@drawable/ic_login_password"
                app:layout_heightPercent="50%"
                app:layout_marginTopPercent="10%"
                app:layout_widthPercent="50%h" />

            <EditText
                android:id="@+id/etLoginPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/ivPassword"
                android:background="@null"
                android:digits="@string/password_mode"
                android:gravity="center_vertical"
                android:hint="@string/login_password_hint"
                android:inputType="textPassword"

                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:windowSoftInputMode="adjustPan"
                app:layout_paddingPercent="2%"
                app:layout_textSizePercent="36%h" />

            <ImageView
                android:id="@+id/ivpwddel"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_delete_lg"
                android:visibility="gone"
                app:layout_heightPercent="50%"
                app:layout_marginTopPercent="10%"
                app:layout_widthPercent="50%h" />
        </com.zhy.android.percent.support.PercentRelativeLayout>

        <TextView
            android:id="@+id/tvLoginBtn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/shape_login_btn_bg"
            android:gravity="center"
            android:text="@string/login_btn_text"
            android:textColor="@color/white"
            app:layout_heightPercent="7.2%"
            app:layout_marginBottomPercent="8.8%"
            app:layout_marginLeftPercent="9.4%"
            app:layout_marginRightPercent="9.4%"
            app:layout_paddingPercent="2%"
            app:layout_textSizePercent="3%h"
            app:layout_widthPercent="81.2%" />

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:id="@+id/rlLoginRegister"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/shape_login_register_bg"
            android:gravity="center_vertical"
            app:layout_heightPercent="6.7%"
            app:layout_marginBottomPercent="0.3%"
            app:layout_paddingLeftPercent="10%"
            app:layout_paddingRightPercent="10%"
            app:layout_paddingTopPercent="2%">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical"
                android:text="@string/login_register"
                android:textColor="@color/white"
                app:layout_textSizePercent="44%h" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_login_right"
                app:layout_heightPercent="40%"
                app:layout_widthPercent="3%" />
        </com.zhy.android.percent.support.PercentRelativeLayout>

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:id="@+id/rlLoginErrors"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/shape_login_register_bg"
            android:gravity="center_vertical"
            app:layout_heightPercent="6.7%"
            app:layout_paddingLeftPercent="10%"
            app:layout_paddingRightPercent="10%"
            app:layout_paddingTopPercent="2%">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical"
                android:text="@string/login_error_text"
                android:textColor="@color/white"
                app:layout_textSizePercent="44%h" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_login_right"
                app:layout_heightPercent="40%"
                app:layout_widthPercent="3%" />
        </com.zhy.android.percent.support.PercentRelativeLayout>

    </com.zhy.android.percent.support.PercentLinearLayout>

</com.zhy.android.percent.support.PercentLinearLayout>