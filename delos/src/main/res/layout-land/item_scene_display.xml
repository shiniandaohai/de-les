<?xml version="1.0" encoding="utf-8"?>

<com.zhy.android.percent.support.PercentFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:background="@mipmap/ic_item_dev">

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/scene_display_item_parent_margin"
        android:layout_marginRight="@dimen/scene_display_item_parent_margin"
        >

        <ImageView
            android:id="@+id/ivItem"
            android:layout_width="@dimen/scene_display_item_img_size"
            android:layout_height="@dimen/scene_display_item_img_size"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/scene_display_item_parent_margin"
            android:src="@drawable/ic_living_room_light"/>

        <TextView
            android:id="@+id/tvCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/scene_display_item_tvcount_marginleft"
            android:layout_toRightOf="@id/ivItem"
            android:text="1"
            android:textColor="@color/blue_title"
            android:textSize="@dimen/scene_display_item_tvcount_textsize"
            />

        <TextView
            android:id="@+id/tvItemText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/ivItem"
            android:layout_marginBottom="@dimen/scene_display_item_tvitemtext_marfinbottom"
            android:layout_marginRight="@dimen/scene_display_item_parent_margin"
            android:singleLine="true"
            android:text="@string/lighting_control"
            android:textColor="@color/blue_title"
            android:textSize="@dimen/scene_display_item_tvitemtext_textsize"
            />

    </com.zhy.android.percent.support.PercentRelativeLayout>

    <ImageView
        android:id="@+id/ivError"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="top|right"
        android:src="@drawable/ic_living_room_error"
        android:visibility="gone"/>
