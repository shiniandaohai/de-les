<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <include layout="@layout/layout_top_bar"/>
    <TextView
        android:id="@+id/id_textViewConnect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:text="正在连接中"
        android:textColor="#3a3a3a"
        android:textSize="18sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="请选择测试时的状态"
        android:textColor="#8c8c8c"
        android:textSize="14sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginTop="20dp"
        android:background="@mipmap/marquee"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/id_textViewDinnerBefore"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@mipmap/dinnerbefore"
            android:gravity="center"
            android:text="餐前"
            android:textColor="@color/white"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/id_textViewDinnerAfter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:text="餐后"
            android:textColor="@color/dinner"
            android:textSize="14sp"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="100dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/bloodsugar"/>

        <TextView
            android:id="@+id/id_textViewValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textColor="#3a3a3a"
            android:textSize="18sp"
            android:text="0"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp"
        android:visibility="invisible"
        >
        <TextView
            android:id="@+id/id_textViewSave"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="@drawable/rect_blue"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:textSize="18sp"
            android:text="保  存"
            android:gravity="center"
            android:textColor="#ffffff"/>
        <TextView
            android:id="@+id/id_textViewResert"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="@drawable/rect_green"
            android:layout_weight="1"
            android:textSize="18sp"
            android:text="重  测"
            android:gravity="center"
            android:textColor="#ffffff"/>
    </LinearLayout>

</LinearLayout>