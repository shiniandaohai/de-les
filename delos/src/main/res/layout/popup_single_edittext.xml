<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#50000000"
    android:gravity="center">

    <com.zhy.android.percent.support.PercentLinearLayout
        android:background="@drawable/shape_solid_white_bg"
        android:gravity="center"
        android:layout_width="320dp"
        android:layout_height="180dp"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/tvTitle"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@color/blue_title"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:textColor="@color/white"
            app:layout_textSizePercent="5.8%w"
            android:text="@string/add_alarm_phone"/>
        <EditText
            android:id="@+id/etEditText"
            android:layout_margin="18dp"
            android:background="@drawable/shape_stroke_gray"
            android:layout_width="0dp"
            app:layout_widthPercent="90%"
            android:layout_height="48dp"
            android:padding="8dp"
            app:layout_textSizePercent="4.8%w"
            android:hint="@string/input_alarm_phone"
            android:inputType="textEmailAddress"
            android:textColorHint="@color/gray_text"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:background="@color/gray_line" />
        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            >


            <TextView
                android:id="@+id/tvCancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/blue_text"
                android:text="@string/popup_scene_button_cancel"
                app:layout_textSizePercent="4.8%w" />

            <View
                android:layout_width="0.8dp"
                android:layout_height="match_parent"
                android:background="@color/gray_line" />

            <TextView
                android:id="@+id/tvOk"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/blue_text"
                android:text="@string/popup_scene_button_ok"
                app:layout_textSizePercent="4.8%w" />


        </com.zhy.android.percent.support.PercentLinearLayout>

    </com.zhy.android.percent.support.PercentLinearLayout>

</com.zhy.android.percent.support.PercentLinearLayout>