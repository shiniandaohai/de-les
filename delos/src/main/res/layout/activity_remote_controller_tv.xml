<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    >

    <include layout="@layout/layout_top_bar" />

    <!-- 显示部分 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:divider="@drawable/divider_vertical_tv0"
        android:showDividers="middle|beginning|end"
        android:gravity="center_horizontal"
        >

        <Button
            android:id="@+id/bt_tv_switch"
            android:layout_width="@dimen/function_contraller_img_size"
            android:layout_height="@dimen/function_contraller_img_size"
            android:layout_centerHorizontal="true"
            android:background="@drawable/sel_rc_tv_power"
            />

        <Button
            android:id="@+id/bt_tv_rc_main"
            style="@style/remotecontroller_fun_icon"
            android:background="@drawable/sel_rc_tv_main" />

        <Button
            android:id="@+id/bt_tv_rc_menu"
            style="@style/remotecontroller_fun_icon"
            android:background="@drawable/sel_rc_tv_menu" />

        <Button
            android:id="@+id/bt_tv_rc_tv_record"
            style="@style/remotecontroller_fun_icon"
            android:layout_centerVertical="true"
            android:background="@drawable/sel_rc_tv_tvav" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        >
        <RelativeLayout
            android:layout_width="256dp"
            android:layout_height="256dp"
            android:background="@drawable/ic_remote_tv_bg"
            >

            <Button
                android:id="@+id/bt_tv_rc_ok"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerInParent="true"
                android:background="@drawable/sel_rc_tv_nav_ok"
                tools:background="@drawable/ic_remote_tv_ok_press"
                />

            <Button
                android:id="@+id/bt_tv_rc_up"
                android:layout_width="180dp"
                android:layout_height="93dp"
                android:layout_above="@id/bt_tv_rc_ok"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="-15dp"
                android:background="@drawable/sel_rc_tv_nav_up"
                tools:background="@drawable/ic_remote_tv_nav_up_press"
                />

            <Button
                android:id="@+id/bt_tv_rc_down"
                android:layout_width="180dp"
                android:layout_height="93dp"
                android:layout_below="@id/bt_tv_rc_ok"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-15dp"
                android:background="@drawable/sel_rc_tv_nav_down"
                tools:background="@drawable/ic_remote_tv_nav_down_press"
                />

            <Button
                android:id="@+id/bt_tv_rc_left"
                android:layout_width="93dp"
                android:layout_height="180dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="-15dp"
                android:layout_toLeftOf="@id/bt_tv_rc_ok"
                android:background="@drawable/sel_rc_tv_nav_left"
                tools:background="@drawable/ic_remote_tv_nav_left_press"
                />

            <Button
                android:id="@+id/bt_tv_rc_right"
                android:layout_width="93dp"
                android:layout_height="180dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="-15dp"
                android:layout_toRightOf="@id/bt_tv_rc_ok"
                android:background="@drawable/sel_rc_tv_nav_right"
                tools:background="@drawable/ic_remote_tv_nav_right_press"
                />
        </RelativeLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:divider="@drawable/divider_vertical_tv1"
        android:showDividers="middle|beginning|end"
        android:gravity="center_horizontal"
        >

        <Button
            android:id="@+id/bt_tv_rc_voladd"
            style="@style/remotecontroller_fun_icon"
            android:layout_centerVertical="true"
            android:background="@drawable/sel_rc_tv_voladd" />

        <Button
            android:id="@+id/bt_tv_rc_volsub"
            style="@style/remotecontroller_fun_icon"
            android:layout_centerVertical="true"
            android:background="@drawable/sel_rc_tv_volsub" />

        <Button
            android:id="@+id/bt_tv_rc_back"
            style="@style/remotecontroller_fun_icon"
            android:background="@drawable/sel_rc_tv_back" />
    </LinearLayout>
</LinearLayout>