                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:text="@string/homepage_blood_pressure_value"
                                android:textColor="@color/gray_text"
                                app:layout_textSizePercent="10%" />

                        </com.zhy.android.percent.support.PercentLinearLayout>

                        <View
                            android:layout_width="0.8dp"
                            android:layout_height="match_parent"
                            android:background="@color/gray_line" />

                        <com.zhy.android.percent.support.PercentLinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            app:layout_widthPercent="33.2%">

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_gravity="center_horizontal"
                                android:src="@drawable/ic_homepage_weight"
                                app:layout_heightPercent="40%"
                                app:layout_marginTopPercent="12%"
                                app:layout_widthPercent="50%" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:text="@string/homepage_weight"
                                android:textColor="@color/blue_text"
                                app:layout_marginTopPercent="18%"
                                app:layout_textSizePercent="10%" />

                            <TextView
                                android:id="@+id/tvHomepageWeight"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:text="@string/homepage_weight_value"
                                android:textColor="@color/gray_text"
                                app:layout_textSizePercent="10%" />

                        </com.zhy.android.percent.support.PercentLinearLayout>

                    </com.zhy.android.percent.support.PercentLinearLayout>

                </com.zhy.android.percent.support.PercentLinearLayout>
                <!-- health live -->

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="@color/gray_line"
                    app:layout_heightPercent="0.5%" />

                <!-- green live -->
                <com.zhy.android.percent.support.PercentLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    app:layout_heightPercent="25%">

                    <com.zhy.android.percent.support.PercentLinearLayout
                        android:id="@+id/pllGreenLive"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        app:layout_widthPercent="35.4%">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/homepage_green_live"
