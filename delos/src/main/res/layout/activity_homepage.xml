                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/homepage_electricity"
                                android:textColor="@color/blue_text"
                                app:layout_textSizePercent="70%" />

                            <TextView
                                android:id="@+id/tvHomepageCurrentPower"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/homepage_current_power"
                                android:textColor="@color/blue_text"
                                app:layout_marginLeftPercent="7%"
                                app:layout_textSizePercent="50%" />

                        </com.zhy.android.percent.support.PercentLinearLayout>

                        <TextView
                            android:id="@+id/tvHomepageElectricityDegree"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
