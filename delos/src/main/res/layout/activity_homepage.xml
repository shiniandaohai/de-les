                            android:text="@string/homepage_link_manage"
                            android:textColor="@color/white"
                            app:layout_heightPercent="30%"
                            app:layout_marginTopPercent="9%"
                            app:layout_textSizePercent="18%h" />

                    </com.zhy.android.percent.support.PercentLinearLayout>

                </com.zhy.android.percent.support.PercentLinearLayout>
                <!-- 左侧end -->

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/white" />

                <!-- 右侧start -->
                <com.zhy.android.percent.support.PercentLinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    app:layout_widthPercent="50%">

                    <com.zhy.android.percent.support.PercentLinearLayout
                        android:id="@+id/llSideSlipDeviceManage"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:orientation="vertical"
                        app:layout_heightPercent="33%">

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/ic_homepage_sideslip_device_manage"
                            app:layout_heightPercent="40%"
                            app:layout_marginTopPercent="10%"
                            app:layout_widthPercent="40%" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_gravity="center_horizontal"
                            android:text="@string/homepage_device_manage"
                            android:textColor="@color/white"
                            app:layout_heightPercent="30%"
                            app:layout_marginTopPercent="9%"
                            app:layout_textSizePercent="18%h" />

                    </com.zhy.android.percent.support.PercentLinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.8dp"
                        android:background="@color/white" />

                    <com.zhy.android.percent.support.PercentLinearLayout
                        android:id="@+id/llSideSlipAreaSystemSettings"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:orientation="vertical"
                        app:layout_heightPercent="33%">

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/ic_homepage_sideslip_system_settings"
                            app:layout_heightPercent="40%"
                            app:layout_marginTopPercent="20%"
                            app:layout_widthPercent="40%" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_gravity="center_horizontal"
                            android:text="@string/homepage_system_settings"
                            android:textColor="@color/white"
                            app:layout_heightPercent="30%"
                            app:layout_marginTopPercent="9%"
                            app:layout_textSizePercent="18%h" />

                    </com.zhy.android.percent.support.PercentLinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.8dp"
                        android:background="@color/white" />

                    <com.zhy.android.percent.support.PercentLinearLayout
                        android:id="@+id/llSideSlipPersonalCenter"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:orientation="vertical"
                        app:layout_heightPercent="33%">

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/ic_homepage_sideslip_personal_center"
                            app:layout_heightPercent="40%"
                            app:layout_marginTopPercent="20%"
                            app:layout_widthPercent="40%" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_gravity="center_horizontal"
                            android:text="@string/homepage_personal_center"
                            android:textColor="@color/white"
                            app:layout_heightPercent="30%"
                            app:layout_marginTopPercent="9%"
                            app:layout_textSizePercent="18%h" />

                    </com.zhy.android.percent.support.PercentLinearLayout>
                </com.zhy.android.percent.support.PercentLinearLayout>
                <!-- 右侧end -->
            </com.zhy.android.percent.support.PercentLinearLayout>
            <!-- 侧滑的下半部分end -->
        </com.zhy.android.percent.support.PercentLinearLayout>
    </com.zhy.android.percent.support.PercentLinearLayout>
    <!-- homepage side slip end -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <include layout="@layout/layout_top_bar" />

            <com.zhy.android.percent.support.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">


                <!-- comfort live -->
                <com.zhy.android.percent.support.PercentFrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_heightPercent="40%">


                    <com.zhy.android.percent.support.PercentLinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/ic_homepage_bg"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:text="@string/homepage_comfort_live"
                            android:textColor="@color/blue_text"
                            app:layout_heightPercent="9%"
                            app:layout_marginLeftPercent="2.8%"
                            app:layout_marginTopPercent="4.0%"
                            app:layout_textSizePercent="6.8%" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <android.support.v4.view.ViewPager
                                android:id="@+id/vpComfortLive"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="5dp" />

                            <LinearLayout
                                android:id="@+id/linearlayout_dot"
                                android:layout_width="match_parent"
                                android:layout_height="15dp"
                                android:layout_alignParentBottom="true"
                                android:layout_marginBottom="1dp"
                                android:gravity="center"
                                android:orientation="horizontal">

                            </LinearLayout>

                        </RelativeLayout>
                    </com.zhy.android.percent.support.PercentLinearLayout>

                    <com.zhy.android.percent.support.PercentLinearLayout
                        android:id="@+id/llApplyAnnotation"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_gravity="bottom"
                        android:background="#c6919191"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        app:layout_heightPercent="20%">

                        <TextView
                            android:id="@+id/tvApplyMessage"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="12121212121拒绝了您的申请"
                            android:textColor="@color/white"
                            app:layout_paddingLeftPercent="2%"
                            app:layout_textSizePercent="36%" />

                        <TextView
                            android:id="@+id/tvApplyCancel"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="取消"
                            android:textColor="@color/white"
                            app:layout_textSizePercent="36%"
                            app:layout_widthPercent="20%" />

                        <TextView
                            android:id="@+id/tvApplyAgain"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="重新申请"
                            android:textColor="@color/white"
                            app:layout_textSizePercent="36%"
                            app:layout_widthPercent="20%" />

                    </com.zhy.android.percent.support.PercentLinearLayout>

                    <com.zhy.android.percent.support.PercentFrameLayout
                        android:id="@+id/flGatewayHint"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/gateway_hint_message_color"
                        android:visibility="gone">

                        <com.zhy.android.percent.support.PercentLinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            app:layout_heightPercent="13%">

                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_marginLeft="10dp"
                                android:src="@drawable/ic_living_room_error" />

