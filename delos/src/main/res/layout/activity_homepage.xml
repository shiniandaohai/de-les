                            <TextView
                                android:id="@+id/tvHomepageBloodGlucose"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:text="@string/homepage_blood_glucose"
                                android:textColor="@color/blue_text"
                                app:layout_marginTopPercent="7%"
                                app:layout_textSizePercent="10%" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:text="@string/homepage_blood_glucose_value"
                                android:textColor="@color/gray_text"
                                app:layout_textSizePercent="10%" />

                        </com.zhy.android.percent.support.PercentLinearLayout>

                        <View
                            android:layout_width="0.8dp"
                            android:layout_height="match_parent"
                            android:background="@color/gray_line" />

                        <com.zhy.android.percent.support.PercentLinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            app:layout_widthPercent="33.5%">

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_gravity="center_horizontal"
                                android:src="@drawable/ic_homepage_blood_pressure"
                                app:layout_heightPercent="50%"
                                app:layout_marginTopPercent="8%"
                                app:layout_widthPercent="50%" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:text="@string/homepage_blood_pressure"
                                android:textColor="@color/blue_text"
                                app:layout_marginTopPercent="12%"
                                app:layout_textSizePercent="10%" />

                            <TextView
