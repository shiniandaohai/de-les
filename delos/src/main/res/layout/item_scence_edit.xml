<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_item_room"
    android:padding="1dp">
    <LinearLayout
        android:layout_width="90dp"
        android:layout_height="120dp"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="5dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/ivScenceItemImage"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_scence_popup_auto" />

        <TextView
            android:id="@+id/tvScenceItemText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text=""
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/normal_small_txt" />
        <TextView
            android:id="@+id/tvScenceItemRoom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text=""
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/normal_small_txt" />

    </LinearLayout>

    <ImageView
        android:id="@+id/ivPopupItemCheck"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_popup_check"
        android:visibility="visible" />

</RelativeLayout>
