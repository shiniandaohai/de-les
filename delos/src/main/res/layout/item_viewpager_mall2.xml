<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <ImageView
        android:id="@+id/img_activelight"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/mall_activelight"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_space"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/mall_light"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white"
            android:paddingRight="@dimen/common_space"
            android:paddingLeft="@dimen/common_space">
            <ImageView
                android:id="@+id/img_phythmlight"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@mipmap/mall_jielight"/>

            <ImageView
                android:id="@+id/img_energylight"
                android:layout_marginLeft="@dimen/common_space"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@mipmap/mall_energylight"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>