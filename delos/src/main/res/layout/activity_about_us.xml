<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/layout_top_bar"/>

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="26%">

        <ImageView
            android:id="@+id/ivAboutUsTop"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerInParent="true"
            android:src="@mipmap/ic_logo"
            app:layout_heightPercent="60%"
            app:layout_widthPercent="40%" />

        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_marginTopPercent="75%"
            android:gravity="center">

            <TextView
                android:id="@+id/tvAboutUsVersion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="V2.1.4"
                android:textColor="@color/gray_text"
                app:layout_textSizePercent="35%" />
        </com.zhy.android.percent.support.PercentLinearLayout>

    </com.zhy.android.percent.support.PercentRelativeLayout>

    <com.zhy.android.percent.support.PercentLinearLayout
        android:id="@+id/llAboutJia"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        app:layout_heightPercent="9%">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:layout_marginLeftPercent="5%"
            android:text="@string/about_us_jia"
            android:textColor="@color/gray_text"
            app:layout_textSizePercent="30%h" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_login_more"
            app:layout_heightPercent="40%h"
            app:layout_marginRightPercent="3%"
            app:layout_widthPercent="34%h" />
    </com.zhy.android.percent.support.PercentLinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/gray_line" />

    <com.zhy.android.percent.support.PercentLinearLayout
        android:id="@+id/llFunctionIntroduce"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        app:layout_heightPercent="9%">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:layout_marginLeftPercent="5%"
            android:text="@string/function_introduce"
            android:textColor="@color/gray_text"
            app:layout_textSizePercent="30%h" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_login_more"
            app:layout_heightPercent="40%h"
            app:layout_marginRightPercent="3%"
            app:layout_widthPercent="34%h" />
    </com.zhy.android.percent.support.PercentLinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/gray_line" />

    <com.zhy.android.percent.support.PercentLinearLayout
        android:id="@+id/llAdviceFeedback"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        app:layout_heightPercent="9%">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:layout_marginLeftPercent="5%"
            android:text="@string/advice_feedback"
            android:textColor="@color/gray_text"
            app:layout_textSizePercent="30%h" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_login_more"
            app:layout_heightPercent="40%h"
            app:layout_marginRightPercent="3%"
            app:layout_widthPercent="34%h" />
    </com.zhy.android.percent.support.PercentLinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/gray_line" />

</com.zhy.android.percent.support.PercentLinearLayout>