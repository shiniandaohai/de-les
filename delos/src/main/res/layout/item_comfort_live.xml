<?xml version="1.0" encoding="utf-8"?>

<com.zhy.android.percent.support.PercentFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

    <ImageView
        android:id="@+id/ivItemImage"
        android:layout_width="@dimen/item_comfort_live_imgv_height_and_width"
        android:layout_height="@dimen/item_comfort_live_imgv_height_and_width"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_circle_air_condition"
        />

    <TextView
        android:id="@+id/tvItemText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="@dimen/item_comfort_live_text_margin"
        android:text=""
        android:textColor="@color/blue_icon"
        android:textSize="@dimen/item_comfort_live_textsize"/>

    <ImageView
        android:id="@+id/light_show"
        android:layout_width="10dp"
        android:layout_height="14dp"
        android:layout_gravity="right"
        android:layout_marginRight="13dp"
        android:background="@drawable/ic_light_on"
        android:visibility="visible"
        />
</com.zhy.android.percent.support.PercentFrameLayout>