<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/layout_bottom"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:gravity="center_vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            >
            <TextView
                android:id="@+id/tv_aqi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#535353"
                tools:text="164"
                android:textSize="120sp"
                android:includeFontPadding="false"
                android:layout_centerInParent="true"
                 />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_toRightOf="@id/tv_aqi"
                android:layout_alignBottom="@+id/tv_aqi"
                android:layout_alignTop="@id/tv_aqi"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AQI"
                    android:textSize="14sp"
                    android:textColor="#d3d3d3"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/500"
                    android:textSize="14sp"
                    android:textColor="#d3d3d3"
                    android:layout_marginTop="50dp"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_aqi_des"
                android:layout_width="100dp"
                android:layout_height="30dp"
                tools:text="中度污染"
                android:textColor="@color/white"
                tools:textColor="@color/red"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:textSize="16sp"
                android:background="@drawable/shape_btn_transp"
                android:gravity="center"
                android:layout_below="@id/tv_aqi"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="温湿度"
            android:layout_gravity="center_horizontal"
            android:textSize="12sp"
            android:textColor="#d3d3d3"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="#f1f1f1"
            android:layout_marginTop="5dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_marginTop="15dp"
            >
            <LinearLayout
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:id="@+id/title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="温度"
                            android:textSize="14sp"
                            android:textColor="#535353"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="℃"
                            android:textSize="10sp"
                            android:textColor="#d3d3d3"
                            />
                    </LinearLayout>
                    <TextView
                        android:id="@+id/tv_temp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="25"
                        android:textSize="40sp"
                        android:textColor="#535353"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        />
                </RelativeLayout>
                <View
                    android:id="@+id/v_temp"
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:background="#49b8f2"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginLeft="15dp"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="湿度"
                            android:textSize="14sp"
                            android:textColor="#535353"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="%"
                            android:textSize="10sp"
                            android:textColor="#d3d3d3"
                            />
                    </LinearLayout>
                    <TextView
                        android:id="@+id/tv_hum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="55"
                        android:textSize="40sp"
                        android:textColor="#535353"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        />
                </RelativeLayout>
                <View
                    android:id="@+id/v_hum"
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:background="#49b8f2"
                    />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="污染物"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:textSize="12sp"
            android:textColor="#d3d3d3"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="#f1f1f1"
            android:layout_marginTop="5dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_marginTop="15dp"
            >

            <LinearLayout
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PM2.5"
                            android:textSize="14sp"
                            android:textColor="#535353"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="μg/m3"
                            android:textSize="10sp"
                            android:textColor="#d3d3d3"
                            />
                    </LinearLayout>
                    <TextView
                        android:id="@+id/tv_pm_two_five"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="165"
                        android:textSize="40sp"
                        android:textColor="#535353"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        />
                </RelativeLayout>
                <View
                    android:id="@+id/v_pm_two_five"
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    tools:background="#00ad60"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginLeft="15dp"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:orientation="vertical"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PM10"
                            android:textSize="14sp"
                            android:textColor="#535353"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="μg/m3"
                            android:textSize="10sp"
                            android:textColor="#d3d3d3"
                            />
                    </LinearLayout>
                    <TextView
                        android:id="@+id/tv_pm_one_zero"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="165"
                        android:textSize="40sp"
                        android:textColor="#535353"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        />
                </RelativeLayout>
                <View
                    android:id="@+id/v_pm_one_zero"
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    tools:background="#00ad60"
                    />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TVOC"
                    android:textSize="14sp"
                    android:textColor="#535353"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="mg/m3"
                    android:textSize="10sp"
                    android:textColor="#d3d3d3"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/tv_tvoc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="179"
                android:textSize="40sp"
                android:textColor="#535353"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>
        <View
            android:id="@+id/v_tvoc"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="#49b8f2"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            />
    </LinearLayout>


</RelativeLayout>