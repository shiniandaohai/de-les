<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_paddingTopPercent="20%h">

        <ImageView
            android:id="@+id/ivBackArrow"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/ic_reset_password_back"
            app:layout_heightPercent="40%"
            app:layout_marginLeftPercent="15%h"
            app:layout_marginTopPercent="15%h"
            app:layout_paddingRightPercent="15%"
            app:layout_widthPercent="20%" />

        <com.zhy.android.percent.support.PercentLinearLayout
            android:id="@+id/llCameraListCenter"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerInParent="true"
            android:background="@drawable/ic_video_record_right"
            app:layout_heightPercent="60%"
            app:layout_marginTopPercent="20%h"
            app:layout_widthPercent="40%">

            <TextView
                android:id="@+id/tvMonitorPicture"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/mointor_picture_text"
                android:textColor="@color/white"
                app:layout_textSizePercent="45%" />

            <TextView
                android:id="@+id/tvVideoRecord"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/video_record_text"
                android:textColor="@color/blue_text"
                app:layout_textSizePercent="45%" />
        </com.zhy.android.percent.support.PercentLinearLayout>

        <TextView
            android:id="@+id/tvCameraListSelectBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="@string/select_text"
            android:textColor="@color/white"
            app:layout_marginTopPercent="15%h"
            app:layout_marginRightPercent="3%"
            app:layout_textSizePercent="5%w" />

        <TextView
            android:id="@+id/tvCameraListCancelBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="@string/gateway_popup_cancel"
            android:textColor="@color/white"
            app:layout_marginTopPercent="15%h"
            app:layout_marginRightPercent="3%"
            app:layout_textSizePercent="5%w"
            android:visibility="gone"/>
    </com.zhy.android.percent.support.PercentRelativeLayout>
</merge>