<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_finger_close"
            android:layout_width="match_parent"
            android:layout_height="279dp"
            android:src="@drawable/ic_finger_black" />

        <ImageView
            android:id="@+id/iv_finger_open"
            android:layout_width="match_parent"
            android:layout_height="279dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/btn_finger_open"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_lock_line_scan"
            android:visibility="gone" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_lock"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="50dp"
        android:src="@drawable/ic_lock_close" />


</LinearLayout>