<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layout_base_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="106dp"
        android:background="@mipmap/bg_health_blood_pressure">

        <LinearLayout
            android:id="@+id/ll_model_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_model_1"
                android:layout_width="49dp"
                android:layout_height="49dp"
                android:layout_gravity="center"
                android:background="@drawable/sel_panel_bg" />

            <TextView
                android:id="@+id/tv_model_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="5dp"
                android:text="@string/mode_default"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_model_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_model_2"
                android:layout_width="49dp"
                android:layout_height="49dp"
                android:layout_gravity="center"
                android:background="@drawable/sel_panel_bg" />

            <TextView
                android:id="@+id/tv_model_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="5dp"
                android:text="@string/mode_default"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_model_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_model_3"
                android:layout_width="49dp"
                android:layout_height="49dp"
                android:layout_gravity="center"
                android:background="@drawable/sel_panel_bg" />

            <TextView
                android:id="@+id/tv_model_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="5dp"
                android:text="@string/mode_default"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_model_4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_model_4"
                android:layout_width="49dp"
                android:layout_height="49dp"
                android:layout_gravity="center"
                android:background="@drawable/sel_panel_bg" />

            <TextView
                android:id="@+id/tv_model_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="5dp"
                android:text="@string/mode_default"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <ExpandableListView
        android:id="@+id/exListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:childDivider="@color/split_line_color"
        android:divider="@color/split_line_color"
        android:scrollbars="none"
        android:dividerHeight="0.5dp" />

    <include layout="@layout/layout_loading" />
</LinearLayout>