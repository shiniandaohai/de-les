<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@color/layout_base_bg"
             android:paddingLeft="10dp"
             android:paddingRight="10dp"
             android:paddingTop="10dp">
    <!--

        <GridView
            android:id="@+id/gv_comment_room"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:cacheColorHint="@color/transparent"
            android:listSelector="@color/transparent"
            android:numColumns="3"
            android:orientation="vertical"
            android:scrollbars="none"
            android:visibility="gone"
            />
    -->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_marginBottom="10dp"
        />

    <RelativeLayout
        android:id="@+id/ll_device_nor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:verticalSpacing="20dp"
        android:visibility="gone"

        >

        <ImageView
            android:id="@+id/iv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/ic_home_room"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_1"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:text="@string/text_add_room_step"
            android:textColor="@color/gray_et_text"
            android:textSize="14sp"
            />


    </RelativeLayout>
</FrameLayout>