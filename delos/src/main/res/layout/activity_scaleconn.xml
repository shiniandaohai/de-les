<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <include layout="@layout/layout_top_bar"/>
    <TextView
        android:id="@+id/id_textViewConnect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:textColor="#3a3a3a"
        android:textSize="18sp"
        android:text="正在连接中"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:src="@mipmap/weightimage"/>

    <TextView
        android:id="@+id/id_textViewKg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:textColor="#3a3a3a"
        android:textSize="14sp"
        android:gravity="center"
        android:text="kg"/>

    <TextView
        android:id="@+id/id_textViewBMI"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:layout_marginTop="10dp"
        android:textColor="#3a3a3a"
        android:textSize="14sp"
        android:gravity="center"
        android:text="BMI:"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="体脂率\n(%)"
                android:textColor="#5c5c5c"
                android:textSize="16sp"
                />

            <TextView
                android:id="@+id/id_textViewBodyFatRatio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textColor="#3a3a3a"
                android:textSize="16sp"
                android:text="0"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="肌肉率\n(%)"
                android:textColor="#5c5c5c"
                android:textSize="16sp"
                />

            <TextView
                android:id="@+id/id_textViewMuscleRate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textColor="#3a3a3a"
                android:textSize="16sp"
                android:text="0"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="水分\n(%)"
                android:textColor="#5c5c5c"
                android:textSize="16sp"
                />

            <TextView
                android:id="@+id/id_textViewWaterContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textColor="#3a3a3a"
                android:textSize="16sp"
                android:text="0"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="骨质\n(%)"
                android:textColor="#5c5c5c"
                android:textSize="16sp"
                />

            <TextView
                android:id="@+id/id_textViewBone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textColor="#3a3a3a"
                android:textSize="16sp"
                android:text="0"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="基础代谢\n(Kcal)"
                android:textColor="#5c5c5c"
                android:textSize="16sp"
                />

            <TextView
                android:id="@+id/id_textViewBasalMetabolism"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textColor="#3a3a3a"
                android:textSize="16sp"
                android:text="0"
                />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:visibility="invisible">
        <TextView
            android:id="@+id/id_textViewSave"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="@drawable/rect_blue"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:textSize="18sp"
            android:text="保  存"
            android:gravity="center"
            android:textColor="#ffffff"/>
        <TextView
            android:id="@+id/id_textViewResert"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="@drawable/rect_green"
            android:layout_weight="1"
            android:textSize="18sp"
            android:text="重  测"
            android:gravity="center"
            android:textColor="#ffffff"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#8c8c8c"
        android:textSize="14sp"
        android:text="建议测试前请脱鞋！"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        />
</LinearLayout>