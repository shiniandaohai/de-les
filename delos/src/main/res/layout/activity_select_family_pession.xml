<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_top_bar" />

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_heightPercent="88%"
        app:layout_marginLeftPercent="10%"
        app:layout_marginRightPercent="10%"
        app:layout_marginTopPercent="2%h">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/gateway"
        android:textColor="#222222"
        android:textSize="16dp"
        app:layout_heightPercent="7%" />

    <TextView
        android:id="@+id/tvGateway"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/gateway"
        android:layout_marginLeft="100dp"
        android:textColor="#222222"
        android:textSize="16dp"
        app:layout_heightPercent="7%" />

</LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="30dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:layout_centerVertical="true"
                android:text="@string/distribute_limit"
                android:textColor="#222222"
                android:textSize="16dp"
                app:layout_heightPercent="7%" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/llSelectAll"
                android:text="@string/select_all"
                android:textSize="16sp"
                android:layout_marginRight="8dp"
                android:textColor="#262626"
                />

            <LinearLayout
                android:id="@+id/llSelectAll"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:padding="4dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/shape_stroke_gray">

                <ImageView
                    android:id="@+id/ivSelectAll"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_distribute_checked"
                    android:visibility="gone"
                    app:layout_marginTopPercent="15%h"
                    app:layout_heightPercent="50%"
                    app:layout_widthPercent="50%h"
                    />
            </LinearLayout>

        </RelativeLayout>

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:id="@+id/llComfortLive"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="30dp"
            >

            <ImageView
                android:id="@+id/ivComfortLive"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:src="@drawable/ic_comfort_live_blue"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_toRightOf="@id/ivComfortLive"
                android:text="@string/comfort_live_limit"
                android:textColor="#222222"
                android:textSize="16dp"
                app:layout_marginLeftPercent="5%" />
            <LinearLayout
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:padding="4dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/shape_stroke_gray">
            <ImageView
                android:id="@+id/ivComfortLiveChecked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_distribute_checked"
                android:visibility="gone"
                 />
        </LinearLayout>
        </com.zhy.android.percent.support.PercentRelativeLayout>

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:id="@+id/llHomeSecurity"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            >

            <ImageView
                android:id="@+id/ivHomeSecurity"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:src="@drawable/ic_circle_monitor"
                 />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/ivHomeSecurity"
                android:text="@string/home_security_limit"
                android:textColor="#222222"
                android:textSize="16dp"
                android:gravity="center_vertical"
                app:layout_marginLeftPercent="5%" />

            <LinearLayout
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:padding="4dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/shape_stroke_gray">
            <ImageView
                android:id="@+id/ivHomeSecurityChecked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_distribute_checked"
                android:visibility="gone"
                />
</LinearLayout>
        </com.zhy.android.percent.support.PercentRelativeLayout>

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:id="@+id/llHealthLive"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            >

            <ImageView
                android:id="@+id/ivHealthLive"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:src="@drawable/ic_health_live_blue"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/ivHealthLive"
                android:text="@string/health_live_limit"
                android:textColor="#222222"
                android:gravity="center_vertical"
                android:textSize="16dp"
                app:layout_marginLeftPercent="5%" />
            <LinearLayout
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:padding="4dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/shape_stroke_gray">
            <ImageView
                android:id="@+id/ivHealthLiveChecked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_distribute_checked"
                android:visibility="gone"
               />
</LinearLayout>
        </com.zhy.android.percent.support.PercentRelativeLayout>

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:id="@+id/llGreenLive"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            >

            <ImageView
                android:id="@+id/ivGreenLive"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:src="@drawable/ic_green_live_blue"
                 />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/ivGreenLive"
                android:text="@string/green_live_limit"
                android:textColor="#222222"
                android:gravity="center_vertical"
                android:textSize="16dp"
                app:layout_marginLeftPercent="5%" />
            <LinearLayout
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:padding="4dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/shape_stroke_gray">
            <ImageView
                android:id="@+id/ivGreenLiveChecked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_distribute_checked"
                android:visibility="gone"
                />
</LinearLayout>
        </com.zhy.android.percent.support.PercentRelativeLayout>

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:id="@+id/llDeviceManage"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            >

            <ImageView
                android:id="@+id/ivDeviceManage"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:src="@drawable/ic_device_manage_blue"
                 />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/ivDeviceManage"
                android:text="@string/device_manage_limit"
                android:textColor="#222222"
                android:gravity="center_vertical"
                android:textSize="16dp"
                app:layout_marginLeftPercent="5%" />
            <LinearLayout
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:padding="4dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/shape_stroke_gray">
            <ImageView
                android:id="@+id/ivDeviceManageChecked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_distribute_checked"
                android:visibility="gone"
                />
</LinearLayout>
        </com.zhy.android.percent.support.PercentRelativeLayout>

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:id="@+id/llAreaManage"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
           >

            <ImageView
                android:id="@+id/ivAreaManage"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="2dp"
                android:layout_alignParentLeft="true"
                android:src="@drawable/ic_area_manage_blue"
                 />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/ivAreaManage"
                android:text="@string/area_manager"
                android:textColor="#222222"
                android:gravity="center_vertical"
                android:textSize="16dp"
                app:layout_marginLeftPercent="5%" />
            <LinearLayout
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:padding="4dp"

                android:layout_alignParentRight="true"
                android:background="@drawable/shape_stroke_gray">
            <ImageView
                android:id="@+id/ivAreaManageChecked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_distribute_checked"
                android:visibility="gone"
                />
</LinearLayout>
        </com.zhy.android.percent.support.PercentRelativeLayout>

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:id="@+id/llLinkManage"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            >

            <ImageView
                android:id="@+id/ivLinkManage"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:src="@drawable/ic_linkage_manage_blue"
                android:layout_marginTop="2dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/ivLinkManage"
                android:text="@string/link_manage_limit"
                android:textColor="#222222"
                android:gravity="center_vertical"
                android:textSize="16dp"
                app:layout_marginLeftPercent="5%" />
            <LinearLayout
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:padding="4dp"
                
                android:layout_alignParentRight="true"
                android:background="@drawable/shape_stroke_gray">
            <ImageView
                android:id="@+id/ivLinkManageChecked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_distribute_checked"
                android:visibility="gone"
                />
</LinearLayout>
        </com.zhy.android.percent.support.PercentRelativeLayout>

        <TextView
            android:id="@+id/tvConfirmLimitBtn"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/shape_login_btn_bg"
            android:gravity="center"
            android:text="@string/confirm_limit"
            android:textColor="@color/white"
            app:layout_heightPercent="8%"
            app:layout_marginTopPercent="7%"
            app:layout_textSizePercent="3.5%" />

    </com.zhy.android.percent.support.PercentLinearLayout>

</com.zhy.android.percent.support.PercentLinearLayout>