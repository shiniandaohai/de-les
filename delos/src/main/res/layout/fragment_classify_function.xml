<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/layout_base_bg"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_all_device"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:background="@color/white"
        android:orientation="horizontal"
        >

        <TextView
            style="@style/text_style"
            android:paddingLeft="20dp"
            android:text="@string/text_all_device"
            />

        <TextView
            android:id="@+id/tv_device_num"
            android:visibility="invisible"
            style="@style/text_style"
            android:paddingLeft="5dp"
            android:text="(0/0)"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/split_line_color"/>

    <GridView
        android:id="@+id/gridView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:numColumns="2"
        android:background="@color/white"
        />
    <com.handmark.pulltorefresh.library.PullToRefreshGridView
        android:visibility="gone"
        android:id="@+id/pullToRefreshListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/transparent"
        android:dividerPadding="0dp"
        android:fadingEdge="none"
        android:fastScrollEnabled="false"
        android:footerDividersEnabled="false"
        android:headerDividersEnabled="false"
        android:showDividers="none"
        android:smoothScrollbar="true"
        app:ptrShowIndicator="false"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:id="@+id/ll_airclean"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            >

            <TextView
                style="@style/text_style"
                android:paddingLeft="20dp"
                android:text="@string/air_clean"
                />

            <TextView
                android:id="@+id/tv_airclean"
                style="@style/text_style"
                android:paddingLeft="5dp"
                android:text="(0/0)"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_waterclean"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            >

            <TextView
                style="@style/text_style"
                android:paddingLeft="20dp"
                android:text="@string/water_clean"
                />

            <TextView
                android:id="@+id/tv_waterclean"
                style="@style/text_style"
                android:paddingLeft="5dp"
                android:text="(0/0)"
                />
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/split_line_color"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:id="@+id/ll_light"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            >

            <TextView
                style="@style/text_style"
                android:paddingLeft="20dp"
                android:text="@string/light_control"
                />

            <TextView
                android:id="@+id/tv_light_control"
                style="@style/text_style"
                android:paddingLeft="5dp"
                android:text="(0/0)"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_curtaincontrol"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            >

            <TextView
                style="@style/text_style"
                android:paddingLeft="20dp"
                android:text="@string/curtain_control"
                />

            <TextView
                android:id="@+id/tv_curtain_control"
                style="@style/text_style"
                android:paddingLeft="5dp"
                android:text="(0/0)"
                />
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/split_line_color"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:id="@+id/ll_aircondition"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            >

            <TextView
                style="@style/text_style"
                android:paddingLeft="20dp"
                android:text="@string/air_condition_control"
                />

            <TextView
                android:id="@+id/tv_CAC_control"
                style="@style/text_style"
                android:paddingLeft="5dp"
                android:text="(0/0)"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_camera"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            >

            <TextView
                style="@style/text_style"
                android:paddingLeft="20dp"
                android:text="@string/camera_control"
                />

            <TextView
                android:id="@+id/tv_camera_control"
                style="@style/text_style"
                android:paddingLeft="5dp"
                android:text="(0/0)"/>
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/split_line_color"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:id="@+id/ll_elec"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            >

            <TextView
                style="@style/text_style"
                android:paddingLeft="20dp"
                android:text="@string/elec_control"
                />

            <TextView
                android:id="@+id/tv_elec_control"
                style="@style/text_style"
                android:paddingLeft="5dp"
                android:text="(0/0)"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_general"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            >

            <TextView
                style="@style/text_style"
                android:paddingLeft="20dp"
                android:text="@string/general_service"
                />

            <TextView
                android:id="@+id/tv_general_control"
                style="@style/text_style"
                android:paddingLeft="5dp"
                android:text="(0/0)"
                />
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/split_line_color"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:id="@+id/ll_aircheck"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            >

            <TextView
                style="@style/text_style"
                android:paddingLeft="20dp"
                android:text="@string/air_check"
                />

            <TextView
                android:id="@+id/tv_air_check"
                style="@style/text_style"
                android:paddingLeft="5dp"
                android:text="(0/0)"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_video"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            >

            <TextView
                style="@style/text_style"
                android:paddingLeft="20dp"
                android:text="@string/video_control"
                />

            <TextView
                android:id="@+id/tv_video_control"
                style="@style/text_style"
                android:paddingLeft="5dp"
                android:text="(0/0)"
                />
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/split_line_color"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:id="@+id/ll_safety_alarm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            >

            <TextView
                style="@style/text_style"
                android:paddingLeft="20dp"
                android:text="@string/safety_alarm"
                />

            <TextView
                android:id="@+id/tv_alarm_control"
                style="@style/text_style"
                android:paddingLeft="5dp"
                android:text="(0/0)"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_protect"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            >

            <TextView
                style="@style/text_style"
                android:paddingLeft="20dp"
                android:text="@string/safety_protect"
                />

            <TextView
                android:id="@+id/tv_protect_control"
                style="@style/text_style"
                android:paddingLeft="5dp"
                android:text="(0/0)"
                />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>