<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="60dp"
    android:gravity="center_vertical"
    android:padding="8dp">

    <ImageView
        android:id="@+id/ivHead"
        android:layout_centerVertical="true"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_family_manage_contacts_head"/>

    <TextView
        android:id="@+id/tvContacts"
        android:layout_centerVertical="true"
        android:textSize="16sp"
        android:layout_toRightOf="@+id/ivHead"
        android:layout_marginLeft="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/family_manage_mine"/>
    <ImageView
        android:id="@+id/ivShare"
        android:visibility="visible"
        android:layout_marginRight="13dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/ivPersonHead"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/selector_share"
        android:src="@drawable/ic_family_manage_share_blue"/>
    <ImageView
        android:visibility="visible"
        android:id="@+id/ivPersonHead"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:layout_alignParentRight="true"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/selector_main_home"
        android:src="@drawable/ic_family_manage_person"/>

</RelativeLayout>