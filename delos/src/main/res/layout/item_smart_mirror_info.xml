<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="40dp"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="@string/mirror_standard"
            android:textColor="@color/black"
            android:textSize="@dimen/normal_txt" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            android:textColor="@color/black"
            android:textSize="@dimen/normal_txt" />


        <TextView
            android:id="@+id/tv_mirro_standard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/normal_txt" />

        <Button
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@mipmap/ic_device_name_edit"
            android:visibility="invisible" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="@string/mirror_type"
            android:textColor="@color/black"
            android:textSize="@dimen/normal_txt" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            android:textColor="@color/black"
            android:textSize="@dimen/normal_txt" />


        <TextView
            android:id="@+id/tv_mirro_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/normal_txt" />

        <Button
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@mipmap/ic_device_name_edit"
            android:visibility="invisible" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="@string/mirror_id"
            android:textColor="@color/black"
            android:textSize="@dimen/normal_txt" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            android:textColor="@color/black"
            android:textSize="@dimen/normal_txt" />


        <TextView
            android:id="@+id/tv_mirro_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/normal_txt"
            tools:text="slkfjllsdjfldflsjflsdjflsdjflkdjflsjdfljsdflsdjflsflsjflkjlsdfjklskdjfljsdlfksldfj"
            />

        <Button
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@mipmap/ic_device_name_edit"
            android:visibility="invisible" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="@string/mirror_rename"
            android:textColor="@color/black"
            android:textSize="@dimen/normal_txt" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            android:textColor="@color/black"
            android:textSize="@dimen/normal_txt" />

        <TextView
            android:id="@+id/tv_mirro_rename"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:maxLines="1"
            tools:text="sljflsdkjslfjldsfjdslkjfldfjkkkkk"
            android:ellipsize="end"
            android:textSize="@dimen/normal_txt" />

        <Button
            android:id="@+id/btn_rename"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@mipmap/ic_device_name_edit" />


    </LinearLayout>

    <Button
        android:layout_gravity="center"
        android:id="@+id/btn_off_line"
        style="@style/normalOkButton"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:text="@string/mirror_off_line"
        android:textSize="@dimen/normal_txt"
        android:visibility="gone" />

</LinearLayout>