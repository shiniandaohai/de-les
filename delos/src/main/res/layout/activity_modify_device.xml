<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_top_bar" />

    <ImageView
        android:id="@+id/ivSelectedDevice"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        app:layout_heightPercent="13%"
        app:layout_marginTopPercent="5%"
        app:layout_widthPercent="40%" />


    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:minWidth="60dp"
        app:layout_heightPercent="6%"
        app:layout_widthPercent="60%">

        <EditText
            android:id="@+id/etModifyDeviceName"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:hint="@string/custom_device_name"
            android:minWidth="40dp"
            android:textColor="@color/gray_text"
            android:textColorHint="@color/gray_text"
            android:textSize="14sp"
            app:layout_heightPercent="90%"
            app:layout_marginTopPercent="10%" />

        <com.zhy.android.percent.support.PercentLinearLayout
            android:id="@+id/llDeleteContent"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:visibility="gone"
            app:layout_widthPercent="8%">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/ic_cancel" />

        </com.zhy.android.percent.support.PercentLinearLayout>
    </com.zhy.android.percent.support.PercentLinearLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="0.8dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/gray_line"
        app:layout_marginTopPercent="1%"
        app:layout_widthPercent="60%" />

    <LinearLayout
        android:id="@+id/llLightSwitch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        app:layout_marginTopPercent="3%">

        <LinearLayout
            android:id="@+id/llLight1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:visibility="gone">

            <ToggleButton
                android:id="@+id/tbItemSwitch1"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/selector_toggle"
                android:checked="false"
                android:textColor="@color/common_bg"
                android:textOff=""
                android:textOn="" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llLight2"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:visibility="gone">

            <ToggleButton
                android:id="@+id/tbItemSwitch2"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/selector_toggle"
                android:checked="false"
                android:textColor="@color/common_bg"
                android:textOff=""
                android:textOn="" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llLight3"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:visibility="gone">

            <ToggleButton
                android:id="@+id/tbItemSwitch3"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/selector_toggle"
                android:checked="false"
                android:textColor="@color/common_bg"
                android:textOff=""
                android:textOn="" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llLight4"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:visibility="gone">

            <ToggleButton
                android:id="@+id/tbItemSwitch4"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/selector_toggle"
                android:checked="false"
                android:textColor="@color/common_bg"
                android:textOff=""
                android:textOn="" />
        </LinearLayout>


    </LinearLayout>


    <!--<ImageView-->
    <!--android:id="@+id/ivModifySwitch"-->
    <!--android:layout_width="70dp"-->
    <!--android:layout_height="50dp"-->
    <!--android:layout_gravity="center_horizontal"-->
    <!--android:src="@drawable/selector_toggle"-->
    <!--android:visibility="gone"-->
