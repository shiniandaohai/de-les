<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.boer.delos.widget.LightControlView
        android:id="@+id/lightControlView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:light_num="4"
        app:text_size="50sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_light_123"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_above="@+id/ll_light_34"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/ll_light_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/cbLight1"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:background="@drawable/bg_light_on_off"
                    android:button="@null"
                    android:checked="false" />

                <TextView
                    android:id="@+id/tv_light_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:text="@string/text_light_1"
                    android:textColor="@color/gray_et_text"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_light_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:visibility="visible">

                <CheckBox
                    android:id="@+id/cbLight2"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/bg_light_on_off"
                    android:button="@null"
                    android:checked="false" />

                <TextView
                    android:id="@+id/tv_light_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:text="@string/text_light_2"
                    android:textColor="@color/gray_et_text"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_light_33"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:visibility="visible">

                <CheckBox
                    android:id="@+id/cbLight33"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/bg_light_on_off"
                    android:button="@null"
                    android:checked="false" />

                <TextView
                    android:id="@+id/tv_light_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:text="@string/text_light_3"
                    android:textColor="@color/gray_et_text"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout

            android:id="@+id/ll_light_34"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone"
            tools:visibility="visible"
            >

            <LinearLayout
                android:id="@+id/ll_light_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/cbLight3"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/bg_light_on_off"
                    android:button="@null"
                    android:checked="false" />

                <TextView
                    android:id="@+id/tv_light_34_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:text="@string/text_light_3"
                    android:textColor="@color/gray_et_text"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_light_4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:visibility="visible">

                <CheckBox
                    android:id="@+id/cbLight4"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/bg_light_on_off"
                    android:button="@null"
                    android:checked="false" />

                <TextView
                    android:id="@+id/tv_light_34_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:text="@string/text_light_4"
                    android:textColor="@color/gray_et_text"
                    android:textSize="14sp" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>
</LinearLayout>

