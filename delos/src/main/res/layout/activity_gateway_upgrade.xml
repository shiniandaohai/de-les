<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eaeaea"
    android:orientation="vertical">

    <include layout="@layout/layout_top_bar" />

    <com.zhy.android.percent.support.PercentLinearLayout
        android:id="@+id/rlHardwareVersion"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        app:layout_heightPercent="10%">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@mipmap/ic_family_manage_gateway_online"
            app:layout_heightPercent="60%h"
            app:layout_marginLeftPercent="5%"
            app:layout_marginRightPercent="3%"
            app:layout_widthPercent="60%h" />

        <TextView
            android:id="@+id/tvHardwareVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/hardware_version"
            android:textColor="@color/gray_et_hint"
            app:layout_textSizePercent="30%h" />

    </com.zhy.android.percent.support.PercentLinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/gray_line" />

    <com.zhy.android.percent.support.PercentLinearLayout
        android:id="@+id/rlSoftwareVersion"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        app:layout_heightPercent="10%">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@mipmap/ic_family_manage_gateway_online"
            app:layout_heightPercent="60%h"
            app:layout_marginLeftPercent="5%"
            app:layout_marginRightPercent="3%"
            app:layout_widthPercent="60%h" />

        <TextView
            android:id="@+id/tvSoftwareVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/software_version"
            android:textColor="@color/gray_et_hint"
            app:layout_textSizePercent="30%h" />

    </com.zhy.android.percent.support.PercentLinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/gray_line" />

    <TextView
        android:id="@+id/tvGatewayUpgradeBtn"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/btn_blue_save"
        android:gravity="center"
        android:text="@string/gateway_upgrade_btn"
        android:textColor="@color/white"
        app:layout_heightPercent="7%"
        app:layout_marginTopPercent="4%"
        app:layout_textSizePercent="3%h" />

</com.zhy.android.percent.support.PercentLinearLayout>