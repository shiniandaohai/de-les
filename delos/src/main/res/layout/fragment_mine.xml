<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layout_base_bg"
    android:orientation="vertical">

    <LinearLayout
        android:padding="10dp"
        android:id="@+id/ll_login"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/login_account" />

        <TextView
            android:textColor="@color/black"
            android:textSize="@dimen/normal_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:text="@string/login_btn_text" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.boer.delos.view.TitleLayout
            android:id="@+id/tl_title_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <include layout="@layout/activity_personal_center" />
    </LinearLayout>


</FrameLayout>
