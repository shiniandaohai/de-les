<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_top_bar" />

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_heightPercent="55%"
        app:layout_marginTopPercent="7%"
        app:layout_marginLeftPercent="10%"
        app:layout_marginRightPercent="10%">

        <com.zhy.android.percent.support.PercentFrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_heightPercent="65%"
            android:background="@drawable/shape_stroke_gray"
            >

            <EditText
                android:id="@+id/etAdviceFeedback"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_paddingLeftPercent="2%"
                app:layout_paddingTopPercent="2%"
                android:hint="@string/feedback_hint"
                android:textColorHint="#afafaf"
                android:textColor="@color/gray_text"
                app:layout_textSizePercent="5%w"
                android:gravity="left"
                android:inputType="textMultiLine"
                android:background="@null"/>

            <TextView
                android:id="@+id/tvAdviceFeedbackNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="200"
                android:textColor="#afafaf"
                android:gravity="center"
                android:layout_gravity="bottom|right"
                app:layout_marginRightPercent="2%"
                app:layout_marginBottomPercent="2%"
                app:layout_textSizePercent="6%w"/>

        </com.zhy.android.percent.support.PercentFrameLayout>

        <TextView
            android:id="@+id/tvAdviceFeedbackBtn"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_heightPercent="13%"
            android:text="@string/feedback_btn_text"
            android:textColor="@color/white"
            android:gravity="center"
            app:layout_textSizePercent="6%w"
            app:layout_marginTopPercent="20%"
            android:background="@drawable/shape_login_btn_bg_gray"/>

    </com.zhy.android.percent.support.PercentLinearLayout>

</com.zhy.android.percent.support.PercentLinearLayout>