<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlayout_top"
    android:layout_width="match_parent"
    android:layout_height= "48dp"
    android:background="@color/layout_title_bg"
    >

    <LinearLayout
        android:id="@+id/id_linearLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/title_text_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12.5dp"
            android:textColor="@color/gray_et_text"
            android:textSize="@dimen/normal_small_txt"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/id_left"
            android:layout_width="40dp"
            android:layout_height="40dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/id_textviewContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textColor="@color/gray_et_text"
            android:textSize="@dimen/normal_title" />

        <LinearLayout
            android:id="@+id/id_line_titleContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:textSize="@dimen/normal_txt"
                android:id="@+id/id_textviewContentLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@mipmap/left_white_sel"
                android:gravity="center"
                android:textColor="@color/gray_et_text" />

            <TextView
                android:textSize="@dimen/normal_txt"
                android:id="@+id/id_textviewContentRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/right_white_nor"
                android:gravity="center"
                android:textColor="@color/gray_et_text" />
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/id_linearRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/id_right"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/title_text_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12.5dp"
            android:textAlignment="center"
            android:textColor="@color/gray_et_text"
            android:textSize="@dimen/normal_small_txt"
            android:visibility="gone" />

    </LinearLayout>
</RelativeLayout>

