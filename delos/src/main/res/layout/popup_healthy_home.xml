<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/pop_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#50000000"
        android:gravity="center"
        android:orientation="vertical"
        >

        <Button
            android:id="@+id/btn_buy"
            android:layout_width="210dp"
            android:layout_height="49dp"
            android:background="@color/blue_home_healthy1"
            android:text="@string/device_buy"
            android:textColor="@color/white"
            android:textSize="14sp"
            />

        <Button
            android:id="@+id/btn_go"
            android:layout_width="210dp"
            android:layout_height="49dp"
            android:layout_marginTop="15dp"
            android:background="@color/blue_home_healthy2"
            android:text="@string/device_go"
            android:textColor="@color/white"
            android:textSize="14sp"
            />

        <Button
            android:id="@+id/btn_input"
            android:layout_width="210dp"
            android:layout_height="49dp"
            android:layout_marginTop="15dp"
            android:background="@color/blue_home_healthy3"
            android:text="@string/device_input"
            android:textColor="@color/white"
            android:textSize="14sp"
            />

    </LinearLayout>


</LinearLayout>