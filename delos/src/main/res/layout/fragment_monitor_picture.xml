<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <GridView
        android:id="@+id/gvMonitorPicture"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:horizontalSpacing="5dp"
        android:numColumns="3"
        android:verticalSpacing="5dp" />

    <com.zhy.android.percent.support.PercentLinearLayout
        android:id="@+id/llMonitorBottom"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#f2f2f2"
        android:orientation="vertical"
        app:layout_heightPercent="10%">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:background="#3f3f3f" />

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:id="@+id/rlMonitorDelete"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:visibility="gone">

            <ImageView
                android:id="@+id/ivMonitorPicDownload"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_alignParentLeft="true"
                android:src="@drawable/ic_video_record_recover"
                app:layout_heightPercent="30%"
                app:layout_marginLeftPercent="4%"
                app:layout_widthPercent="30%h" />

            <ImageView
                android:id="@+id/ivMonitorPicDelete"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_video_record_delete"
                app:layout_heightPercent="30%"
                app:layout_marginRightPercent="4%"
                app:layout_widthPercent="30%h" />
        </com.zhy.android.percent.support.PercentRelativeLayout>

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:id="@+id/rlMonitorSelectAll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="全部选择"
                android:textColor="@color/black"
                app:layout_textSizePercent="30%" />

        </com.zhy.android.percent.support.PercentRelativeLayout>
    </com.zhy.android.percent.support.PercentLinearLayout>

</com.zhy.android.percent.support.PercentLinearLayout>