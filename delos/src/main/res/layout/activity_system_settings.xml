            android:layout_toRightOf="@id/ivShockHint"
            android:text="@string/setting_shock_hint"
            android:textColor="@color/gray_text"
            app:layout_textSizePercent="30%h" />

        <!--<com.zhy.android.percent.support.PercentLinearLayout-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->
            <!--app:layout_widthPercent="@string/system_setting_toggle_parent_width"-->
            <!--android:orientation="vertical"-->
            <!--android:gravity="center"-->
            <!--android:layout_alignParentRight="true"-->
            <!--&gt;-->

            <ToggleButton
                android:id="@+id/tbShockHint"
                android:layout_width="@dimen/system_setting_toggle_width"
                android:layout_height="@dimen/system_setting_toggle_height"
                android:background="@drawable/selector_shock_hint"
                android:text=""
                android:textOn=""
                android:textOff=""
                app:layout_marginTopPercent="20%"
                android:layout_alignParentRight="true"
                app:layout_marginRightPercent="3%"
                android:checked="true" />
        <!--</com.zhy.android.percent.support.PercentLinearLayout>-->

    </com.zhy.android.percent.support.PercentRelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/gray_line" />

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:id="@+id/rlVoiceHint"
