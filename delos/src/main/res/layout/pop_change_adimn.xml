<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#50000000"
    android:gravity="center"
    android:orientation="vertical">
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="420dp"
            android:layout_gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/blue_title"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <com.zhy.android.percent.support.PercentRelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvPopupTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:layout_marginLeft="15dp"
                        android:gravity="center"
                        android:text="@string/pop_change_admin"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                </com.zhy.android.percent.support.PercentRelativeLayout>


            </LinearLayout>

            <ListView
                android:id="@+id/lvChangeAdimnPopup"
                android:layout_width="match_parent"
                android:layout_height="330dp"
                android:choiceMode="singleChoice"
                android:descendantFocusability="blocksDescendants"
                android:background="@color/white"
                />
            <com.zhy.android.percent.support.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvChangeAdminPopupCancle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="1dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/layer_popup_scence_btn_cancle_bg"
                    android:gravity="center"
                    android:text="@string/popup_scene_button_cancel"
                    android:textColor="@color/blue_text" />

                <TextView
                    android:id="@+id/tvChangeAdminPopupOk"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="1dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/layer_popup_scence_btn_ok_bg"
                    android:gravity="center"
                    android:text="@string/popup_scene_button_ok"
                    android:textColor="@color/blue_text" />

            </com.zhy.android.percent.support.PercentLinearLayout>

        </LinearLayout>

</RelativeLayout>
