<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="20dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_btn_login_strok">

        <ImageView
            android:id="@+id/iv_1"
            android:layout_width="49dp"
            android:layout_height="49dp"
            android:background="@mipmap/login_password" />

        <ImageView
            android:id="@+id/iv_2"
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_1"
            android:background="@color/split_line_color" />

        <EditText
            android:id="@+id/etOldPassword"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/iv_2"
            android:background="@null"
            android:digits="@string/password_mode"
            android:gravity="center_vertical|left"
            android:hint="@string/input_old_pwd"
            android:inputType="textPassword"
            android:lines="1"
            android:maxLength="16"
            android:maxLines="1"
            android:paddingLeft="10dp"
            android:textColor="@color/gray_et_text"
            android:textColorHint="@color/gray_et_hint"
            android:textSize="14sp" />


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_btn_login_strok">

        <ImageView
            android:id="@+id/iv_3"
            android:layout_width="49dp"
            android:layout_height="49dp"
            android:background="@mipmap/login_password" />

        <ImageView
            android:id="@+id/iv_4"
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_3"
            android:background="@color/split_line_color" />

        <EditText
            android:id="@+id/etNewPassword"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/iv_4"
            android:background="@null"
            android:digits="@string/password_mode"
            android:gravity="center_vertical|left"
            android:hint="@string/input_new_pwd"
            android:inputType="textPassword"
            android:lines="1"
            android:maxLength="16"
            android:maxLines="1"
            android:paddingLeft="10dp"
            android:textColor="@color/gray_et_text"
            android:textColorHint="@color/gray_et_hint"
            android:textSize="14sp" />


    </RelativeLayout>


    <TextView
        android:id="@+id/tvResetConfirm"
        style="@style/normalOkButtonFull"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="@string/popup_scene_button_ok" />


</LinearLayout>