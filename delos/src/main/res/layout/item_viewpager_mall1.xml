<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <ImageView
        android:id="@+id/img_deepclean"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/mall_deepclean"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_space"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/mall_air"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:paddingRight="@dimen/common_space"
        android:paddingLeft="@dimen/common_space">
        <ImageView
            android:id="@+id/img_homeairclean"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@mipmap/mall_houseairclean"/>

        <ImageView
            android:id="@+id/img_airclean"
            android:layout_marginLeft="@dimen/common_space"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@mipmap/mall_airclean"/>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white"
            android:layout_marginTop="@dimen/common_space"
            android:paddingRight="@dimen/common_space"
            android:paddingLeft="@dimen/common_space">
            <ImageView
                android:id="@+id/img_radium"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@mipmap/mall_radium"/>

            <ImageView
                android:id="@+id/img_aromatherapy"
                android:layout_marginLeft="@dimen/common_space"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@mipmap/mall_aromatherapy"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_space"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/mall_water"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white"
            android:paddingRight="@dimen/common_space"
            android:paddingLeft="@dimen/common_space">
            <ImageView
                android:id="@+id/img_homewaterclean"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@mipmap/mall_homewaterclean"/>

            <ImageView
                android:id="@+id/img_tablewater"
                android:layout_marginLeft="@dimen/common_space"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@mipmap/mall_tablewater"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white"
            android:layout_marginTop="@dimen/common_space"
            android:paddingRight="@dimen/common_space"
            android:paddingLeft="@dimen/common_space">
            <ImageView
                android:id="@+id/img_floorwater"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@mipmap/mall_floorwater"/>

            <ImageView
                android:layout_marginLeft="@dimen/common_space"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
               />
        </LinearLayout>
    </LinearLayout>
</ScrollView>