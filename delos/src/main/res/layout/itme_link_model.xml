            android:id="@+id/tvLinkModelRoomName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/item_black_text"
            android:text="@string/meeting_room"
            android:textSize="16sp" />
        <ToggleButton

            android:id="@+id/tbShockHint"
            android:layout_alignParentRight="true"
            app:layout_marginRightPercent="2.5%"
            app:layout_marginTopPercent="21%"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_below="@+id/tvLinkModelRoomName"
            android:background="@drawable/selector_shock_hint"
            android:text=""
            android:textOn=""
            android:textOff=""
            android:checked="false" />
        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_below="@id/tbShockHint"
            android:layout_marginTop="10dp"
            android:background="@color/light_gray_line"/>
