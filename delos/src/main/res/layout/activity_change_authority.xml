<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_top_bar" />

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_marginBottomPercent="2%h"
        app:layout_marginLeftPercent="10%"
        app:layout_marginRightPercent="10%"
        app:layout_marginTopPercent="2%h">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.boer.delos.view.CircleImageView
                android:id="@+id/ivUserHead"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_avatar" />

            <TextView
                android:id="@+id/tvUserName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:gravity="center"
                android:text=""
                android:textColor="#222222"
                android:textSize="16dp"
                app:layout_heightPercent="7%" />

        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/distribute_limit"
                android:textColor="#222222"
                android:textSize="16dp"
                app:layout_heightPercent="7%" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:layout_toLeftOf="@+id/llSelectAll"
                android:text="@string/select_all"
                android:textColor="#262626"
                android:textSize="16sp" />

            <LinearLayout
                android:id="@+id/llSelectAll"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/shape_stroke_gray"
                android:padding="4dp">

                <ImageView
                    android:id="@+id/ivSelectAll"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_distribute_checked"
                    android:visibility="gone"
                    app:layout_heightPercent="50%"
                    app:layout_marginTopPercent="15%h"
                    app:layout_widthPercent="50%h" />
            </LinearLayout>

        </RelativeLayout>

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:id="@+id/llComfortLive"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="30dp">

            <ImageView
                android:id="@+id/ivComfortLive"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:src="@drawable/ic_comfort_live_blue" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/ivComfortLive"
                android:gravity="center_vertical"
                android:text="@string/comfort_live_limit"
                android:textColor="#222222"
                android:textSize="16dp"
                app:layout_marginLeftPercent="5%" />

            <LinearLayout
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/shape_stroke_gray"
                android:padding="4dp">

                <ImageView
                    android:id="@+id/ivComfortLiveChecked"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_distribute_checked"
                    android:visibility="gone" />
            </LinearLayout>
        </com.zhy.android.percent.support.PercentRelativeLayout>

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:id="@+id/llHomeSecurity"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/ivHomeSecurity"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:src="@drawable/ic_circle_monitor" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/ivHomeSecurity"
                android:gravity="center_vertical"
                android:text="@string/home_security_limit"
                android:textColor="#222222"
                android:textSize="16dp"
                app:layout_marginLeftPercent="5%" />

            <LinearLayout
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/shape_stroke_gray"
                android:padding="4dp">

                <ImageView
                    android:id="@+id/ivHomeSecurityChecked"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_distribute_checked"
                    android:visibility="gone" />
            </LinearLayout>
        </com.zhy.android.percent.support.PercentRelativeLayout>

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:id="@+id/llHealthLive"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/ivHealthLive"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:src="@drawable/ic_health_live_blue" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/ivHealthLive"
                android:gravity="center_vertical"
                android:text="@string/health_live_limit"
                android:textColor="#222222"
                android:textSize="16dp"
                app:layout_marginLeftPercent="5%" />

            <LinearLayout
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/shape_stroke_gray"
                android:padding="4dp">

                <ImageView
                    android:id="@+id/ivHealthLiveChecked"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_distribute_checked"
                    android:visibility="gone" />
            </LinearLayout>
        </com.zhy.android.percent.support.PercentRelativeLayout>

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:id="@+id/llGreenLive"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/ivGreenLive"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:src="@drawable/ic_green_live_blue" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/ivGreenLive"
                android:gravity="center_vertical"
                android:text="@string/green_live_limit"
                android:textColor="#222222"
                android:textSize="16dp"
                app:layout_marginLeftPercent="5%" />

            <LinearLayout
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/shape_stroke_gray"
                android:padding="4dp">

                <ImageView
                    android:id="@+id/ivGreenLiveChecked"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_distribute_checked"
                    android:visibility="gone" />
            </LinearLayout>
        </com.zhy.android.percent.support.PercentRelativeLayout>

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:id="@+id/llDeviceManage"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/ivDeviceManage"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:src="@drawable/ic_device_manage_blue" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/ivDeviceManage"
                android:gravity="center_vertical"
                android:text="@string/device_manage_limit"
                android:textColor="#222222"
                android:textSize="16dp"
                app:layout_marginLeftPercent="5%" />

            <LinearLayout
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/shape_stroke_gray"
                android:padding="4dp">

                <ImageView
                    android:id="@+id/ivDeviceManageChecked"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_distribute_checked"
                    android:visibility="gone" />
            </LinearLayout>
        </com.zhy.android.percent.support.PercentRelativeLayout>

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:id="@+id/llAreaManage"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/ivAreaManage"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="2dp"
                android:src="@drawable/ic_area_manage_blue" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/ivAreaManage"
                android:gravity="center_vertical"
                android:text="@string/area_manager"
                android:textColor="#222222"
                android:textSize="16dp"
                app:layout_marginLeftPercent="5%" />

            <LinearLayout
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"

                android:background="@drawable/shape_stroke_gray"
                android:padding="4dp">

                <ImageView
                    android:id="@+id/ivAreaManageChecked"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_distribute_checked"
                    android:visibility="gone" />
            </LinearLayout>
        </com.zhy.android.percent.support.PercentRelativeLayout>

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:id="@+id/llLinkManage"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/ivLinkManage"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="2dp"
                android:src="@drawable/ic_linkage_manage_blue" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/ivLinkManage"
                android:gravity="center_vertical"
                android:text="@string/link_manage_limit"
                android:textColor="#222222"
                android:textSize="16dp"
                app:layout_marginLeftPercent="5%" />

            <LinearLayout
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"

                android:background="@drawable/shape_stroke_gray"
                android:padding="4dp">

                <ImageView
                    android:id="@+id/ivLinkManageChecked"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_distribute_checked"
                    android:visibility="gone" />
            </LinearLayout>
        </com.zhy.android.percent.support.PercentRelativeLayout>

        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tvConfirmLimitBtn"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_gravity="bottom"
                android:background="@drawable/shape_login_btn_bg"
                android:gravity="center"
                android:text="@string/confirm_limit"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </com.zhy.android.percent.support.PercentLinearLayout>

    </com.zhy.android.percent.support.PercentLinearLayout>
</com.zhy.android.percent.support.PercentLinearLayout>