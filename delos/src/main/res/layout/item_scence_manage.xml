<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bg_item_room"
    android:padding="1dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/layout_item"
        android:layout_gravity="center"
        android:background="@color/white"
        android:layout_width="95dp"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="5dp">

        <ImageView
            android:id="@+id/ivSceneItem"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@mipmap/ic_addbatch_add"/>

        <TextView
            android:textSize="@dimen/normal_small_txt"
            android:id="@+id/tvSceneItemText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="添加"
            android:textColor="@color/black"
            tools:visibility="gone"
        />
    </LinearLayout>

    <ImageView
        android:id="@+id/ivDeleteRoom"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/ic_delete"
        android:visibility="gone"
        android:layout_marginRight="30dp"
        android:layout_gravity="center_horizontal"
        />
    <ImageView
        android:id="@+id/ivPopupItemCheck"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="right|top"
        android:src="@drawable/ic_popup_check"
        android:visibility="gone" />
</FrameLayout>
