<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/activity_remote_ctrl_item_height"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tvDeviceModeName"
        android:layout_width="0dp"
        android:layout_height="@dimen/activity_remote_ctrl_item_height"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:text="空调" />

    <ImageView
        android:id="@+id/img_select_model"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:visibility="gone"
        android:layout_marginRight="10dp"
        android:background="@drawable/ic_checked_show" />

    <ImageView
        android:id="@+id/img_detail_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/ic_personal_center_more" />
</LinearLayout>



